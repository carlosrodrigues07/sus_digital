generator client {
  provider = "prisma-client-js"

  
  binaryTargets = ["native", "windows", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id_categoria Int @id @default(autoincrement())
  nome_categoria String
  Iniciativa     Iniciativa[]
}

model Instituicao {
  id_instituicao Int @id @default(autoincrement())
  nome_instituicao String
  site String?
  Iniciativa       Iniciativa[]
}

model Iniciativa {
  id_iniciativa Int @id @default(autoincrement())
  titulo String
  descricao String
  data_cadastro DateTime @default(now())
  fk_id_categoria Int
  fk_id_instituicao Int

  Categoria   Categoria   @relation(fields: [fk_id_categoria], references: [id_categoria])
  Instituicao Instituicao @relation(fields: [fk_id_instituicao], references: [id_instituicao])
}
